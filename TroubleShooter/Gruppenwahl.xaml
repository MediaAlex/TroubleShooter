<Window x:Class="TroubleShooter.Gruppenwahl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gruppenwahl" Height="300" Width="300">
    <Grid>
        <Border CornerRadius="10"
        BorderBrush="Gray"
        BorderThickness="3"
        Background="Beige"
        Margin="24"
        Padding="4">
            <Border.Effect>
                <DropShadowEffect Color="Gray"
                      Opacity=".50"
                      ShadowDepth="16" />
            </Border.Effect>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock FontSize="14" Foreground="#FF1A1A1A" Height="23" HorizontalAlignment="Left" Margin="14,38,0,0" Name="tbl_gruppenWahl" Text="Gruppe" VerticalAlignment="Top" />
                <ComboBox Foreground="#FF1A1A1A" Height="23" HorizontalAlignment="Left" Margin="14,67,0,0" Name="comboBox1" VerticalAlignment="Top" Width="156">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding gruppenNummer}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="14,6,0,0" Name="textBlock1" Text="Willkommen Herr " VerticalAlignment="Top" />
            </Grid>
        </Border>
    </Grid>
</Window>
